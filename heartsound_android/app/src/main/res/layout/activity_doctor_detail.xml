<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="doctor_detail_viewmodel"
            type="cn.shu.heartsound.viewmodel.DoctorDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/doctor_detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/white" />

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="医生姓名："
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/activity_doctor_doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gradle"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="办公室："
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/activity_doctor_office"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gradle"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="办公室电话："
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/activity_doctor_office_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gradle"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="详情："
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="10dp"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/stroke_color"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/doctor_layout_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="一天2次，一次1粒一天2次，一次1粒一天2次，一次1粒一天2次，一次1粒一天2次，一次1粒一天2次，一次1粒一天2次，一次1粒一天2次，一次1粒"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</layout>